@model List<WeekProject.Models.Book>
@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>

<h2>List of Books</h2>


<table class="table">
    <tr>

        <th>Id</th>
        <th>Book Name</th>
        <th>Action</th>


    </tr>



    @foreach (var B in Model)
    {
        <tr>

            <td>@B.Id</td>

            <td>@Html.ActionLink(B.BookName, "Details", "Books", new { id = B.Id }, null)</td>
            <td>@Html.ActionLink("Edit", "Edit", "Books", new { id = B.Id }, new { @class = "btn btn-info" })</td>
            <td>
                @using (Html.BeginForm("Delete", "Book", new { id = B.Id }, FormMethod.Post))
                {
                    <button type="submit" class=" btn btn-danger">Delete</button>
                }
            </td>


        </tr>
    }
</table>

